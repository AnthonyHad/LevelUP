<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="nav-container">
    <div class="nav-logo">
      <span></span>
      <%= link_to root_path do %>
        <%= image_tag "logo.svg", class: "logo-link" %>
        <% end %>
    </div>
  </div>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse">
      <ul class="page-icons navbar-nav mr-auto" id="page-icons">
        <% @url = request.path_info %>
        <%= link_to games_path do %>
          <li class="page-icon middle nav-item mx-3">
            <i class="fas fa-gamepad"></i>
          </li>
        <% end %>
        <%= link_to followings_path, class: "#{'active' if @url.include?('followings')}" do %>
          <li class="page-icon middle nav-item mx-3">
            <i class="far fa-eye"></i>
          </li>
        <% end %>
        <%= link_to games_path do %>
          <li class="page-icon middle nav-item mx-3">
            <i class="fas fa-file-alt"></i>
          </li>
        <% end %>
        <%= link_to games_path do %>
          <li class="page-icon middle nav-item mx-3">
            <i class="fas fa-file-code"></i>
          </li>
        <% end %>
      </ul>
  </div>
  <div class="nav-container">
    <div class="collapse navbar-collapse d-flex justify-content-end" id="navbarSupportedContent">
      <ul class="navbar-nav mr-0 d-flex align-items-center">
        <% if user_signed_in? %>
          <li class="nav-item dropdown d-flex align-items-center mr-auto">
            <%= cl_image_tag(current_user.photo.key, class: "avatar")%>
            <div class="nav-username">
              <%= current_user.nickname %>
            </div>
          </li>
            <li class="settings-icon middle nav-item dropdown mr-2 d-flex align-items-center justify-content-center">
              <i class="fas fa-sliders-h" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false""></i>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                <%= link_to "Add a game", new_game_path, class: "dropdown-item" %>
                <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
              </div>
            </li>
        <% else %>
          <li class="nav-item mr-3">
            <%= link_to "Login", new_user_session_path, class: "nav-link", id: "login-button" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
