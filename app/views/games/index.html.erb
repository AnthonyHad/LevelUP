

<div class="hero">
  <h2>Here we will Have our big nice games displays</h2>
</div>

<div class="search-form">
  <%= form_tag games_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a game!"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>
</div>

<div class="row">
  <div class="col-0 col-md-2">
    <div class="container-fluid">
      <h3>This is where we will have the filters on the page</h3>
    </div>
  </div>
    <div class="col-12 col-md-10">
      <div class="games-background">
        <div class="container-fluid">
          <div class="row">
            <% @games.each do |game| %>
              <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="games-card">
                  <div class="game-card-info">
                    <%= image_tag "mario.jpg", class: "game-image" %>
                    <%= link_to game.title, game_path(game) %>
                    <p class="game-tag"><%="##{game.category}"%></p>
                    <p class="game-description"><%= game.description %></p>
                    <p class="btn btn-success submit-button">Button Here!</p>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
    </div>
  </div>
</div>
