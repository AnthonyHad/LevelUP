<div class="box">
  <div class="cards-post">
    <% @discussion.each do |discussion| %>
      <div class="card-discussion">
        <div class="discussion-top">
          <img class="avatar" alt="avatar" src="https://kitt.lewagon.com/placeholder/users/oscargay" />
          <div class="user-date">
            <p><%= discussion.user.nickname %></p>
            <p class="time"><%= time_ago_in_words(discussion.created_at) %></p>
          </div>
        </div>
        <div class="discussion-content">
          <p><%= discussion.content %></p>
        </div>
        <%= link_to "Add a reply", discussion_game_posts_path, class: "btn btn-success submit-button" %>
      </div>
    <% end %>
    <%= link_to "Add a comment", new_game_post_path(category: "discussion"), class: "btn btn-success submit-button" %>
  </div>
</div>
